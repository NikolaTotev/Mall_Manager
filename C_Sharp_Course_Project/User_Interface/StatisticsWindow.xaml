<Window x:Class="User_Interface.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:User_Interface"
        mc:Ignorable="d"
        Title="StatisticsWindow" Height="450" Width="800">
    <Grid x:Name="G_MainGrid">
        <Label x:Name="Lb_Loading" Content="Loading Graphics ..." HorizontalAlignment="Center" VerticalAlignment="Center"  FontFamily="{StaticResource Montserrat}" FontStyle="Italic" FontWeight="Bold" FontSize="25" Foreground="{StaticResource NavyBlueBase}"></Label>
    </Grid>
</Window>
