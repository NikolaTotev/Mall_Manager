<UserControl x:Class="User_Interface.TextButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:User_Interface"
             mc:Ignorable="d" Height="172.585" Width="372.878">
    <Button Style="{StaticResource TextRoundedButton}" Margin="5" Click="Button_Click">
        <StackPanel Orientation="Horizontal" Width="335">
            <Image Margin="30,0,0,0" x:Name="Img_ButtonImage" Source="/Resources/Icons/Event_Icon.png" Width="100" Height="100" Stretch="Fill"/>
            <TextBlock x:Name="Tb_ButtonName" TextWrapping="Wrap" Text="Test" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="50" Foreground="{StaticResource NavyBlueBase}" FontFamily="{StaticResource Montserrat}" FontStyle="Normal" FontWeight="Bold" Margin="0,20,30,20" Height="60" Width="187"/>
        </StackPanel>
    </Button>
</UserControl>
