<Window x:Class="User_Interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:User_Interface"
        mc:Ignorable="d"
        Title="Mall Manager" Height="650" Width="1000" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <DockPanel x:Name="p_StartPanel">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Welcome!" TextAlignment="Center" Margin="52,90,48,10" FontSize="36" FontFamily="{StaticResource Montserrat}" FontStyle="Normal" FontWeight="Regular"/>
            <TextBox Grid.Row="1" Text="Select Location" TextAlignment="Center"  FontSize="50" FontFamily="{StaticResource Montserrat}" FontStyle="Normal" FontWeight="SemiBold"/>
        </Grid>
    </DockPanel>
</Window>
